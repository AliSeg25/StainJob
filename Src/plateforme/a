from django.shortcuts import render
from django.shortcuts import redirect
from django.contrib import messages

"""import qui sert authentification utilisateur"""
from django.contrib.auth import authenticate, login


# Create your views here.

# fonction a mettre dans views.py
def my_view(request):

    # va recuperer la requet username
    username = request.POST['username']

    # va recuperer la requet password
    password = request.POST['password']

    # va verifier les information d'identification
    """
    Elle renvoie un objet utilisateur si les informations d'identification sont valides, 
    sinon elle renvoie None.
    """
    user = authenticate(request, username=username, password=password)

    if user is not None:
        login(request, user)
        return redirect('home')
    else:
        # Informe l'utilisateur que les informations d'identification sont invalides
        messages.error(request, 'Les informations d\'identification sont invalides.')
        return render(request, 'login.html')
    
from django.contrib.auth.views import LoginView
from django.contrib.auth.mixins import EmailVerificationMixin

class MyLoginView(EmailVerificationMixin, LoginView):
    template_name = 'registration/login.html'